{
  "manifest_version": 2,
  "name": "YouTube Shorts Playback Controls",
  "version": "1.0",
  "description": "Add playback controls to YouTube Shorts with keyboard shortcuts.",
  "permissions": [
    "tabs",
    "*://www.youtube.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/shorts/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon1.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icon1.png"
    }
  }
}